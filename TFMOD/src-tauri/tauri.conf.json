{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../build",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "Provisions Mod Manager",
		"version": "0.0.1"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"clipboard": {
				"writeText": true
			},
			"shell": {
				"all": false,
				"open": "^(((mailto:\\w+)|(tel:\\w+)|(https?://\\w+)).+)|(steam://install/(243750|440))",
				"sidecar": false,
				"execute": true,
				"scope": [
					{
						"name": "vpk",
						"cmd": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Team Fortress 2\\bin\\vpk.exe",
						"args": true
					},
					{
						"name": "tf2_folder_win",
						"cmd": "explorer.exe",
						"args": ["C:\\Program Files (x86)\\Steam\\steamapps\\common\\Team Fortress 2\\tf"]
					},
					{
						"name": "tf2c_folder_win",
						"cmd": "explorer.exe",
						"args": ["C:\\Program Files (x86)\\Steam\\steamapps\\sourcemods\\tf2classic"]
					},
					{
						"name": "of_folder_win",
						"cmd": "explorer.exe",
						"args": ["C:\\Program Files (x86)\\Steam\\steamapps\\sourcemods\\open_fortress"]
					},
					{
						"name": "pf2_folder_win",
						"cmd": "explorer.exe",
						"args": ["C:\\Program Files (x86)\\Steam\\steamapps\\sourcemods\\pf2"]
					},
					{
						"name": "install_workshop_item_win",
						"cmd": "C:\\Program Files (x86)\\Steam\\steam.exe",
						"args": [
							"+workshop_download_item",
							"440",
							{"validator": "\\d+"}
						]
					},
					{
						"name": "steam_quit_win",
						"cmd": "C:\\Program Files (x86)\\Steam\\steam.exe",
						"args": [
							"+quit"
						]
					}
				]
			},
			"fs": {
				"all": false,
				"copyFile": true,
				"createDir": true,
				"exists": true,
				"readDir": true,
				"readFile": true,
				"removeDir": false,
				"removeFile": true,
				"renameFile": true,
				"writeFile": true,
				"scope": [
					"C:/Program Files (x86)/Steam/steamapps/common/Team Fortress 2",
					"C:/Program Files (x86)/Steam/steamapps/common/Team Fortress 2/**/*",
					"C:/Program Files (x86)/Steam/steamapps/workshop/content/440/**/*",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/tf2classic",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/tf2classic/**/*",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/open_fortress",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/open_fortress/**/*",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/pf2",
					"C:/Program Files (x86)/Steam/steamapps/sourcemods/pf2/**/*",
					"C:/Program Files (x86)/Steam/steamapps/common/Source SDK Base 2013 Multiplayer",
					"$APPDATA/tfmod.command.install.txt",
					"$APPDATA/tfmod.command.disable.txt",
					"$APPDATA/tfmod.command.enable.txt",
					"$APPDATA/tfmod.extension.command.current.txt",
					"$APPDATA/Downloads/*"

				]
			},
			"process": {
				"exit" :true
			},
			"window": {
				"all": true,
				"minimize": true,
				"maximize": true,
				"unmaximize": true,
				"startDragging": true,
				"setDecorations": true,
				"create": true,
				"setMinSize": true,
				"setFocus": true
			},
			"http": {
				"all": false,
				"request": true,
				"scope": [
					"https://gamebanana.com/dl/*",
					"https://files.gamebanana.com/mods/*",
					"https://api.gamebanana.com/Core/Item/Data*"
				]
			},
			"os": {
				"all": true
			}
		},
		"bundle": {
			"active": false,
			"category": "Utility",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [
			],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "tf.mod.manager",
			"longDescription": "A Mod Manager for Team Fortress 2. Handles Downloading, organizing and installing mods.\nAdditional utilities include: Detection of conflicting mods: See what files are overriding what; CFG IDE: An editor for scripting in TF2, with command explanation;",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "A Mod Manager for Team Fortress 2",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"pubkey": ""
		},
		"windows": [
			{
				"label": "main",
				"fullscreen": false,
				"height": 840,
				"resizable": true,
				"title": "Provisions Mod Manager",
				"width": 1440,
				"center": true,
				"decorations": true,
				"minWidth": 640,
				"url": "/main",
				"visible": true,
				"focus": true
			}
		],
		"systemTray": {
			"iconPath": "icons/icon.png"
		}
	}
}
